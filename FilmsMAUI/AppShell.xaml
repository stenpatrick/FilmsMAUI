<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FilmsMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FilmsMAUI"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>

        <ShellContent
            Title="Home"
            Icon="home"
            ContentTemplate="{DataTemplate local:Pages.MainPage}"
            Route="MainPage" />        
        <ShellContent
            Title="Games"
            Icon="game"
            ContentTemplate="{DataTemplate local:Pages.MainPage}"
            Route="MainPage1" />        
        <ShellContent
            Title="New &amp; Hot"
            Icon="brand_netflix"
            ContentTemplate="{DataTemplate local:Pages.MainPage}"
            Route="MainPage2" />        
        <ShellContent
            Title="Downloads"
            Icon="download"
            ContentTemplate="{DataTemplate local:Pages.MainPage}"
            Route="MainPage3" />        
    </TabBar>
</Shell>
